<div id="<%= dom_id part %>" class="text-black dark:text-white">
  <p class="my-5">
    <strong class="block font-medium mb-1">Part number:</strong>
    <%= part.part_number %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Part name:</strong>
    <%= part.part_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Manufacturer:</strong>
    <%= part.manufacturer_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= part.quantity %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= part.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this part", part, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this part", edit_part_path(part), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
