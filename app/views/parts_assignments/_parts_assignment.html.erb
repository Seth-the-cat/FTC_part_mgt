<div id="<%= dom_id parts_assignment %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Part:</strong>
    <%= parts_assignment.part.part_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Project:</strong>
    <%= parts_assignment.project.project_name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this parts assignment", parts_assignment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this parts assignment", edit_parts_assignment_path(parts_assignment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
