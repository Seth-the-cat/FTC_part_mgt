<div id="<%= dom_id project_type %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Project type name:</strong>
    <%= project_type.project_type_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= project_type.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this project type", project_type, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this project type", edit_project_type_path(project_type), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
