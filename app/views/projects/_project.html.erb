<div id="<%= dom_id project %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Project name:</strong>
    <%= project.project_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Parts:</strong>
    <ol class="list-decimal list-inside">
    <% project.parts.each do |part| %>
      <li><%= link_to part.part_name, part %></li>
    <% end %>
    </ol>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Project type:</strong>
    <%= project.project_type.project_type_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= project.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this project", project, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this project", edit_project_path(project), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
